<?xml version="1.0" encoding="utf-8"?>
<!-- 4. Добавьте фрагмент, в котором открывается заметка. По аналогии с примером из урока:
        если нажать на элемент списка в портретной ориентации — открывается новое окно,
        если нажать в ландшафтной — окно открывается рядом. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_gravity="fill_horizontal"
        android:maxLines="1"
        android:text=""
        android:textAlignment="textStart"
        style="@style/NotesTextStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/content"
        android:layout_gravity="fill_horizontal"
        android:minHeight="@dimen/contentTextViewHeight"
        android:text=""
        android:textAlignment="textStart"
        style="@style/NotesTextStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/memoDate"
        android:layout_gravity="fill_horizontal"
        android:maxLines="1"
        android:text=""
        android:textAlignment="textStart"
        android:ems="10"
        android:inputType="date"
        style="@style/NotesTextStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/createDate"
        android:layout_gravity="fill_horizontal"
        android:maxLines="1"
        android:text=""
        android:textAlignment="textStart"
        android:ems="10"
        android:inputType="date"
        style="@style/NotesTextStyle"/>

</LinearLayout>